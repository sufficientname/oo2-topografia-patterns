TestCase subclass: #TopographyTest	instanceVariableNames: 'waterTopography landTopography mixedTopography1 mixedTopography2 mixedTopography3 mixedTopography4 mixedTopography5'	classVariableNames: ''	package: 'TP3-3-Topografia-Tests'!!TopographyTest methodsFor: 'tests' stamp: 'sufficientname 6/1/2021 11:33'!testIsEqualTo	self assert: (waterTopography isEqualTo: WaterTopography new).  "water = water"	self assert: (waterTopography isEqualTo: landTopography) not.  "water !!= land"	self assert: (landTopography isEqualTo: LandTopography new).  "land = land"	self assert: (landTopography isEqualTo: waterTopography) not.  "land !!= water"	self assert: (mixedTopography1 isEqualTo: mixedTopography2) not.  "same ratio different distribution"	self assert: (mixedTopography3 isEqualTo: mixedTopography4) not.  "different ratio and distribution"	self assert: (mixedTopography4 isEqualTo: mixedTopography5)  "same ratio and distribution"! !!TopographyTest methodsFor: 'tests' stamp: 'sufficientname 6/1/2021 11:36'!testWaterRatio	self assert: waterTopography waterRatio equals: 1.	self assert: landTopography waterRatio equals: 0.	self assert: mixedTopography1 waterRatio equals: (1 + 1 + 0 + 0) / 4.  "0.5"	self assert: mixedTopography2 waterRatio equals: (1 + 0 + 0 + 1) / 4.  "0.5"	self assert: mixedTopography3 waterRatio equals: (1 + 1 + 1 + 0) / 4.  "0.75"	self assert: mixedTopography4 waterRatio equals: (0.5 + 0.5 + 0.75 + 1) / 4  "0.6875"! !!TopographyTest methodsFor: 'tests' stamp: 'sufficientname 6/1/2021 11:34'!testLandRatio	self assert: waterTopography landRatio equals: 0.	self assert: landTopography landRatio equals: 1.	self assert: mixedTopography1 landRatio equals: (0 + 0 + 1 + 1) / 4.  "0.5"	self assert: mixedTopography2 landRatio equals: (0 + 1 + 1 + 0) / 4.  "0.5"	self assert: mixedTopography3 landRatio equals: (0 + 0 + 0 + 1) / 4.  "0.25"	self assert: mixedTopography4 landRatio equals: (0.5 + 0.5 + 0.25 + 0) / 4  "0.3125"! !!TopographyTest methodsFor: 'running' stamp: 'sufficientname 6/2/2021 09:27'!setUp	super setUp.	waterTopography := WaterTopography new.	landTopography := LandTopography new.	mixedTopography1 := CompositeTopography		with: WaterTopography new		with: WaterTopography new		with: LandTopography new		with: LandTopography new.	mixedTopography2 := CompositeTopography		with: WaterTopography new		with: LandTopography new		with: LandTopography new		with: WaterTopography new.	mixedTopography3 := CompositeTopography		with: WaterTopography new		with: WaterTopography new		with: WaterTopography new		with: LandTopography new.	mixedTopography4 := CompositeTopography		with: mixedTopography1		with: mixedTopography2		with: mixedTopography3		with: waterTopography.	mixedTopography5 := CompositeTopography		with: (mixedTopography4 getTopographyAt: 1)		with: (mixedTopography4 getTopographyAt: 2)		with: (mixedTopography4 getTopographyAt: 3)		with: (mixedTopography4 getTopographyAt: 4)! !